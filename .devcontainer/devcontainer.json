{
  "name": "MasterUCMCloudComputing",
  "dockerFile": "dockerfile",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces,type=bind,consistency=delegated",
  "workspaceFolder": "/workspaces",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {} // Enable Docker in Docker for building images
  },
  "mounts": [ 
    //localEnv:Home for linux host
    //localEnv:USERPROFILE for windows host
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,consistency=cached" // Mount SSH keys for Git access
  ],
  //"postCreateCommand": "find /workspaces/.devcontainer -type f -name '*.sh' -exec sed -i 's/\\r$//' {} +  && bash /workspaces/.devcontainer/script/post-create.sh",
  "postCreateCommand": "bash /workspaces/.devcontainer/script/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-vscode-remote.remote-containers",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-azureterraform",
        "ms-azuretools.vscode-azurecli"
      ]
    }
  }
}